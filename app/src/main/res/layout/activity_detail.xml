<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailActivity"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/img_detail"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        />
    <RatingBar
        android:id="@+id/rating_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="judul"
            android:gravity="center_horizontal"
            android:textSize="30sp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tv_detail_judul"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="isi judul buku"
            android:textSize="30sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ISBN"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/tv_detail_isbn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="isi isbn"
            android:gravity="center_horizontal"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="tahun"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/tv_detail_tahun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="isi tahun"
            android:gravity="center_horizontal"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="penerbit"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/tv_detail_penerbit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="isi penerbit"

            android:gravity="center_horizontal"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="jenis / kategori"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/tv_detail_jenis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="isi jenis"

            android:gravity="center_horizontal"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="jumlah"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/tv_detail_jumlah"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="isi jumlah"

            android:gravity="center_horizontal"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="rangkuman"
        android:gravity="center_horizontal"
        android:textSize="25sp"
        />
    <TextView
        android:id="@+id/tv_detail_rangkuman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="isi rangkuman"
        />
</LinearLayout>